<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Beckoned Path</title>

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/Template/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css">

    <!-- Custom fonts for this template -->
    <link href="@Url.Content("~/Content/Template/vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Plugin CSS -->
    <link href="@Url.Content("~/Content/Template/vendor/magnific-popup/magnific-popup.css")" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/Content/Template/css/freelancer.min.css")" rel="stylesheet" type="text/css">

    <link href="@Url.Content("~/Content/Template/css/body.css")" rel="stylesheet" type="text/css">

</head>
<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg bg-secondary fixed-top text-uppercase" id="mainNav">
        <div class="container">
            <a asp-controller="/event" class="navbar-brand js-scroll-trigger" asp-action="/index">Main Events</a>
            <button class="navbar-toggler navbar-toggler-right text-uppercase bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1">
                        <a asp-controller="/user" class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-action="/index">User Profiles</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a asp-controller="/event" class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-action="/create">Create Event</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a asp-controller="/user" class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-action="/create">Create User</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Location</h4>
                    <p class="lead mb-0">
                        11730 Plaza America Dr #205,
                        <br>Reston, VA 20190
                    </p>
                </div>
                <div class="col-md-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Around the Web</h4>
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <a class="btn btn-outline-light btn-social text-center rounded-circle" href="#">
                                <i class="fa fa-fw fa-facebook"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="btn btn-outline-light btn-social text-center rounded-circle" href="#">
                                <i class="fa fa-fw fa-google-plus"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="btn btn-outline-light btn-social text-center rounded-circle" href="#">
                                <i class="fa fa-fw fa-twitter"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="btn btn-outline-light btn-social text-center rounded-circle" href="#">
                                <i class="fa fa-fw fa-linkedin"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4 class="text-uppercase mb-4">About Beckoned Path</h4>
                    <p class="lead mb-0">
                        With Beckoned Path you will never be alone.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <div class="copyright py-4 text-center text-white">
        <div class="container">
            <small>Copyright &copy; Beckoned Path 2018</small>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="@Url.Content("~/Content/Template/vendor/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/Template/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>

    <!-- Plugin JavaScript -->
    <script src="@Url.Content("~/Content/Template/vendor/jquery-easing/jquery.easing.min.js")"></script>
    <script src="@Url.Content("~/Content/Template/vendor/magnific-popup/jquery.magnific-popup.min.js")"></script>

    <!-- Contact Form JavaScript -->
    <script src="@Url.Content("~/Content/Template/js/jqBootstrapValidation.js")"></script>
    <script src="@Url.Content("~/Content/Template/js/contact_me.js")"></script>

    <!-- Custom scripts for this template -->
    <script src="@Url.Content("~/Content/Template/js/freelancer.min.js")"></script>



</body>
</html>
